{
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "types": ["node", "jest"],
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
} 